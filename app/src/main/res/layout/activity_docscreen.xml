<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ds"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ds"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:text="Welcome Doctor"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/spon"
                android:onClick="spon"
                android:padding="4dp" />
            <TextView

                android:text="Send Alert"
                android:id="@+id/text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="140dp"
                android:layout_marginBottom="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/textViewTitle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="100dp"
                android:onClick="alert"

                android:layout_below="@id/text"
                android:src="@drawable/msg"
                android:textStyle="bold"/>
            <TextView

                android:text="Student Notebook"
                android:id="@+id/text1"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/textViewimg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:onClick="note"
                android:layout_marginLeft="100dp"

                android:layout_below="@id/text1"
                android:src="@drawable/nt"
                android:textStyle="bold"/>








        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>